<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textview_for_chechbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:padding="20dp"
        android:textColor="#FFF79C17"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Did U take medicine ? "
        />

    <CheckBox
        android:id="@+id/chk_yes"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/textview_for_chechbox"
        android:layout_alignStart="@+id/textview_for_chechbox"
        android:layout_below="@+id/textview_for_chechbox"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="83dp"
        android:text="Yes"
        android:textColor="#000000"
        android:textStyle="bold"
        android:typeface="serif" />

    <CheckBox
        android:id="@+id/chk_no"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/chk_yes"
        android:layout_alignBottom="@+id/chk_yes"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="77dp"
        android:layout_toEndOf="@+id/chk_yes"
        android:layout_toRightOf="@+id/chk_yes"
        android:text="No"
        android:textColor="#000000"
        android:textStyle="bold"
        android:typeface="serif" />





</RelativeLayout>